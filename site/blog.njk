---
title: Blog
layout: base
---

{% block content %}
    <header>
        <div class="flex items-center justify-between">
            <h1 class="text-3xl tracking-tight">
                {{ title }}
            </h1>
            <a href="/feed.xml" class="text-gray-400 hover:text-indigo-600" title="RSS feed">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M5 3a1 1 0 000 2c5.523 0 10 4.477 10 10a1 1 0 102 0C17 8.373 11.627 3 5 3z" />
                    <path d="M4 9a1 1 0 011-1 7 7 0 017 7 1 1 0 11-2 0 5 5 0 00-5-5 1 1 0 01-1-1zM3 15a2 2 0 114 0 2 2 0 01-4 0z" />
                </svg>
            </a>
        </div>
        <div class="w-8 inline-block border-b-4 border-indigo-700 pb-4 mb-4 inline-block"></div>
    </header>

    {%- for post in collections.posts -%}
        <div class="mb-4">
            <div class="text-sm tracking-wide text-gray-600">
                {{ post.data.date | formatDate }}
            </div>
            <a href="{{ post.url }}" class="text-xl hover:text-indigo-600">
                {{ post.data.title }}
            </a>
        </div>
    {%- endfor -%}
{% endblock %}
